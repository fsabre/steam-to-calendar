{% macro month_header(data) %}
    <div class="month-header line">
        <div class="month-label first-column">----- {{ "%02d"%data.month }}/{{ data.year }} -----</div>
        {% for day in data.days %}
            {% if day != 0 %}
                <div class="day-label day-cell">{{ day }}</div>
            {% else %}
                <div class="day-label-blank day-cell"></div>
            {% endif %}
        {% endfor %}
    </div>
{% endmacro %}

{% macro game_line(data, game) %}
    <div class="game-line line">
        <div class="game-label first-column">{{ game.name }}</div>
        {% for day in data.days %}
            <div class="game-point day-cell">{{ "X" if day in game.dates else "" }}</div>
        {% endfor %}
    </div>
{% endmacro %}

{% macro month(data) %}
    <div class="month">
        {{ month_header(data) }}
        {% for game in data.games %}
            {{ game_line(data, game) }}
        {% endfor %}
    </div>
{% endmacro %}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>HTML Calendar</title>
    <style>
        .line {
            width: 100%;
            display: flex;
        }

        .first-column {
            min-width: 130px;
            max-width: 130px;
            margin-right: 5px;
            white-space: nowrap;
            overflow: hidden;
            text-overflow: ellipsis;
        }

        .day-cell {
            border: 1px solid white; /* To be overridden if needed */
            min-width: 25px;
            max-width: 25px;
            text-align: center;
        }

        .month {
            border: 1px solid #CCC;
            border-radius: 5px;
            margin: 5px;
            padding: 5px;
        }

        .month-label {
            text-align: center;
        }

        .day-label {
            border: 1px solid grey;
            background-color: #88ffae;
        }
    </style>
</head>

<body>
<div class="month-container">
    {% for month_data in data %}
        {{ month(month_data) }}
    {% endfor %}
</div>
</body>
</html>
